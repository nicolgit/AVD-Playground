              "destinationPortRange": "5986",
              "sourceAddressPrefixes": "[variables('PSRemotingSliceTIPAddresses')]",
              "destinationAddressPrefix": "*",
              "access": "Allow",
              "priority": 302,
              "direction": "Inbound"
